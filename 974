class Solution {
public:
    int subarraysDivByK(vector<int>& nums, int k) {
        unordered_map<int, int> count;
        count[0] = 1; 

        int sum = 0, ans = 0;
        for (int num : nums) {
            sum += num;
            int rem = sum % k;
            if (rem < 0) rem += k; 

            if (count.find(rem) != count.end()) {
                ans += count[rem];
            }
            count[rem]++;
        }

        return ans;
    }
};
